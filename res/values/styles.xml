<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:actionBarItemBackground">@drawable/selectable_background_alimi</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Alimi</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Alimi</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Alimi</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Alimi</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Alimi</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_alimi</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_alimi</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Alimi</item>
    </style>

    <style name="ActionBar.Solid.Alimi" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_alimi</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_alimi</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_alimi</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Alimi</item>
        <item name="android:titleTextStyle">@style/MyActionBarTitleText</item>
    </style>

    <style name="ActionBar.Transparent.Alimi" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_alimi</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Alimi</item>
    </style>

    <style name="PopupMenu.Alimi" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_alimi</item>
    </style>

    <style name="DropDownListView.Alimi" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_alimi</item>
    </style>

    <style name="ActionBarTabStyle.Alimi" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_alimi</item>
    </style>

    <style name="DropDownNav.Alimi" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_alimi</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_alimi</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_alimi</item>
    </style>

    <style name="ProgressBar.Alimi" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_alimi</item>
    </style>

    <style name="ActionButton.CloseMode.Alimi" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_alimi</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Alimi.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Alimi</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Alimi</item>
    </style>

    <style name="MyActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">#FFFFFF</item>
        <!-- The textColor property is backward compatible with the Support Library -->
    </style>

</resources>